
@if(Show)
{
    <div class="alert alert-secondary alert-dismissable fade show mt-4"
    role="alert">
        @ChildContent
    </div>
    <button @onclick="@Dismiss" type="button" 
    class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
    </button>
}